#!/usr/bin/env php
<?php
//
// ORBITAL CLI
// Command:
// php orbital --env=(development|staging|production) ...
//
// Recommended cron mode:
// */5 * * * * php orbital --env=(development|staging|production) ... >> /logs/cron.log 2>&1
//

set_time_limit(0);

// Vendor autoload
require_once __DIR__. '/vendor/autoload.php';

// Environment definition
$environment = Orbital\Framework\Request::arg(
    'env', 'production'
);

define('ENVIRONMENT', $environment);

// Require app
require_once __DIR__. '/app/bootstrap.php';

// Run console observer
Orbital\Framework\Observer::fire('consoleCommand');